@namespace Kulicha.Components
@using Kulicha.Components.Map
@using LeafletForBlazor

<div style="height: @height; width: @width;">
</div>

@code {
    [Parameter]
    public Map.LoadParameters Parameters { get; set; }

    [Parameter]
    public Map.MapOptions Options { get; set; }

    [Parameter]
    public string height { get; set; }

    [Parameter]
    public string width { get; set; }

    public View View
    {
        get => _view;
        set
        {
            if (value != null)
            {
                _view.setZoomLevel = value.setZoomLevel;
                _view.setMinZoomLevel = value.setMinZoomLevel;
                _view.setMaxZoomLevel = value.setMaxZoomLevel;
                _view.setCenter = value.setCenter;
                _view.setBounds = value.setBounds;
            }
        }
    }

    private View _view = new View();
}